<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@drawable/background_article">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/img_btn_cancel_sources"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/ic_baseline_close_24"
            android:background="?android:selectableItemBackground"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/img_btn_save_sources"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/ic_baseline_done_24"
            android:background="?android:selectableItemBackground"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progress_bar_load_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="100dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/text_view_nothing_found_sources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nothing_found_sources"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="100dp"
            android:textSize="18sp"
            android:visibility="gone"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"/>
    </FrameLayout>
</LinearLayout>