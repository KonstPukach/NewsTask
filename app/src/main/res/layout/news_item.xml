<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_item"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="1dp">
    <ImageView
        android:id="@+id/image_view_article_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/item_front_gradient"/>
    <TextView
        android:id="@+id/text_view_article_title"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_article_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:text="Title"/>
    <LinearLayout
        android:id="@+id/lin_layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_view_article_img"
        android:orientation="vertical"
        android:background="@color/semi_transparent_white">
        <TextView
            android:id="@+id/text_view_article_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:textSize="12sp"
            android:maxLines="3"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/text_view_show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/blue"
            android:visibility="invisible"
            android:textSize="12sp"
            android:text="@string/show_more" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>