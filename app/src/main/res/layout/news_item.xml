<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    app:cardCornerRadius="6dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    android:scrollbars="none">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/news_item"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="1dp">
        <ImageView
            android:id="@+id/image_view_article_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_view_height"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_view_height"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/item_front_gradient"/>
        <TextView
            android:id="@+id/text_view_article_title"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_article_img"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:text="Title"/>
        <com.pukachkosnt.newstask.customview.TextViewShowMore
            android:id="@+id/text_view_article_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image_view_article_img"
            android:paddingHorizontal="8dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:scrollbars="none"
            app:text_show_more="...show more"
            app:text_hide_more=""
            android:background="@color/semi_transparent_white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">
            <TextView
                android:id="@+id/text_view_article_published_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textStyle="italic"
                android:maxWidth="120dp"/>
            <ImageButton
                android:id="@+id/image_btn_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/heart_transparent"/>
            <TextView
                android:id="@+id/text_view_article_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:textStyle="italic"
                android:maxWidth="120dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>